<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    android:background="@drawable/bg_edt_login"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_5sdp"
    android:paddingVertical="@dimen/_5sdp"
    android:paddingHorizontal="@dimen/_5sdp"
    android:id="@+id/viewRootOrderItem">

    <ImageView
        android:id="@+id/imgCategoryItemImage"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:scaleType="centerCrop"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/bg_category_item"
        android:src="@drawable/img_cake_coffee"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_400"
                android:textColor="@color/text_blue"
                android:text="Name:"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtItemName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_400"
                android:textColor="@color/text_blue"
                android:hint="Item Name"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_400"
                android:textColor="@color/text_blue"
                android:text="Price:"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txtItemPrice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_400"
                android:textColor="@color/text_blue"
                android:hint="$ 50"
                android:layout_weight="2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_400"
                android:textColor="@color/text_blue"
                android:text="Inventory Quantity:"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/txtItemInventoryQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter_400"
                android:textColor="@color/text_blue"
                android:hint="50"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:text="Add"
        android:background="@drawable/bg_txt_login"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_background"/>

</LinearLayout>