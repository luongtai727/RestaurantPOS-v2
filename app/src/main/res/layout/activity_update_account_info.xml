<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.manager.UpdateAdminInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/img_back_arrow_circle"
                app:tint="@color/text_blue" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_weight="1"
                android:fontFamily="@font/inter_600"
                android:gravity="center"
                android:text="Update Information"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/text_blue" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_blue" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_20sdp"
            android:gravity="center"
            android:textColor="@color/text_blue"
            android:fontFamily="@font/inter_400"
            android:text="@string/instruction_update_info"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Name: "
                android:fontFamily="@font/inter_500"
                android:textColor="@color/text_blue"/>


            <EditText
                android:id="@+id/edtAdminName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bg_edt_login"
                android:paddingStart="@dimen/_18sdp"
                android:maxLength="16"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Birthday: "
                android:fontFamily="@font/inter_500"
                android:textColor="@color/text_blue"/>


            <EditText
                android:id="@+id/edtBirthday"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bg_edt_login"
                android:paddingStart="@dimen/_18sdp"
                android:maxLength="16"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/imgDate"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Phone: "
                android:fontFamily="@font/inter_500"
                android:textColor="@color/text_blue"/>

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bg_edt_login"
                android:paddingStart="@dimen/_18sdp"
                android:maxLength="16"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Username: "
                android:fontFamily="@font/inter_500"
                android:textColor="@color/text_blue"/>

            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bg_edt_login"
                android:paddingStart="@dimen/_18sdp"
                android:maxLength="16"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp">

            <TextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Password: "
                android:fontFamily="@font/inter_500"
                android:textColor="@color/text_blue"/>

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bg_edt_login"
                android:inputType="textPassword"
                android:paddingStart="@dimen/_18sdp"
                android:maxLength="16"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_10sdp"
            android:paddingStart="@dimen/_8sdp"
            android:text="Username and Staff's name must not be empty!"
            android:textColor="@color/text_red"
            android:visibility="gone"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUpdate"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/bg_txt_login"
                android:fontFamily="@font/inter_500"
                android:gravity="center"
                android:text="UPDATE"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp" />

            <TextView
                android:id="@+id/txtCancel"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@drawable/bg_txt_login"
                android:fontFamily="@font/inter_500"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/_20ssp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>