<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewRootOrderItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/bg_edt_login"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/_5sdp"
    android:paddingVertical="@dimen/_5sdp">

    <ImageView
        android:id="@+id/imgCategoryItemImage"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_category_item"
        android:padding="@dimen/_3sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_cake_coffee" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_2sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/inter_400"
                android:text="Name:"
                android:textColor="@color/text_blue" />

            <TextView
                android:id="@+id/txtItemName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fontFamily="@font/inter_400"
                android:hint="Item Name"
                android:textColor="@color/text_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_2sdp">

            <ImageView
                android:id="@+id/imgMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_txt_login"
                android:src="@drawable/img_minus_1"
                android:text="Count"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/txtOrderQuantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/bg_edt_login"
                android:gravity="center"
                android:fontFamily="@font/inter_500"
                android:text="1" />

            <ImageView
                android:id="@+id/imgPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_txt_login"
                android:src="@drawable/img_plus_1"
                android:text="Count"
                app:tint="@color/white" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_2sdp">

        <TextView
            android:id="@+id/txtNote"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_2sdp"
            android:background="@drawable/bg_txt_login"
            android:src="@drawable/ic_launcher_background"
            android:text="Note"
            android:textColor="@color/white"
            app:drawableLeftCompat="@drawable/img_note"/>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bg_txt_login"
            android:src="@drawable/ic_launcher_background"
            android:text="Delete"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>